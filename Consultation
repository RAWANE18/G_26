package cabinet_medical;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class Consultation {
	
	private String date ;
	private int id_consultation;
	private int id_patient;
	 
	//getters and setters
	public String getDate() {
		return date;
	}

	public void setDate(String date) {
		this.date = date;
	}

	public int getId_consultation() {
		return id_consultation;
	}

	public void setId_consultation(int id_consultation) {
		this.id_consultation = id_consultation;
	}

	public int getId_patient() {
		return id_patient;
	}

	public void setId_patient(int id_patient) {
		this.id_patient = id_patient;
	}

	
	//mySQL
		Connection con =DriverManager.getConnection("jdbc:mysql://localhost:3306/consultation","root","20050125:)");	
		Statement stmt =con.createStatement();
		
	//charger une consultation 
		public void chargerDetailsConsultation() throws SQLException {
			String s ="INSERT INTO consultation VALUES ("+date+","+id_consultation+","+id_patient+")";
			stmt.execute(s);
			con.close();
		}


}
